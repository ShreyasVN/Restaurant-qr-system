{
  "name": "restaurant-qr-system",
  "version": "1.0.0",
  "description": "Restaurant QR System - React 18 + Vite + TypeScript mono-repo",
  "private": true,
  "workspaces": [
    "packages/*",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev --workspace=@restaurant-qr/frontend",
    "dev:backend": "npm run start:dev --workspace=@restaurant-qr/backend",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=@restaurant-qr/frontend",
    "build:backend": "npm run build --workspace=@restaurant-qr/backend",
    "test": "npm run test --workspaces",
    "test:frontend": "npm run test --workspace=@restaurant-qr/frontend",
    "test:backend": "npm run test --workspace=@restaurant-qr/backend",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "type-check": "npm run type-check --workspaces",
    "prepare": "husky install",
    "commitlint": "commitlint --edit"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "restaurant",
    "qr-system",
    "react",
    "vite",
    "typescript",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "swr": "^2.3.4"
  }
}
